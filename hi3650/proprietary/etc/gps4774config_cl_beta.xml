<?xml version="1.0" encoding="utf-8"?>
<glgps xmlns="http://www.glpals.com/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.glpals.com/ glconfig.xsd" >
  <!--HAL Confguration  -->
  <hal
    PortName="lhd"
    NvStorageDir="/data/gps/"
    LogEnabled="true"
    Log="FILE"
    LogDirectory="/data/log/gps_log/gps"
    GpioDelayMs="130"

    CtrlPipe="/data/gps/glgpsctrl"
    NmeaOutName="/data/gps/gpspipe"
    CdmaReportTrackingLocationToHisi="false"
    LogDirectoryMaxSizeMb="1024"
    LogLineThreshold="1000000"
    ReAidingType="0"

    AdditionalRFLoss="1"
    SuplEnable="false"
    CPSimulatorMode="false"
    TimeSyncGroupDelay="-14.772657907"
    WakeLock="geo"
    HttpSyncLto="true"
    LtoFileName="lto2.dat"
    LtoDir="/data/gps/"
    LtoSyncThresholdDays="3"
    AssertEnabled="false"
    CPMpcServer="10.199.22.165"
    CPMpcPort="6066"
   />
  <gll
    LogPriMask="LOG_DEBUG"
    LogFacMask="LOG_GLLAPI | LOG_NMEA"
    FrqPlan="FRQ_PLAN_26MHZ_2PPM_49_152MHZ_300PPB"
    RfType="GL_RF_47531_BRCM_EXT_LNA"
    WarmStandbyTimeout1Seconds="10"
    WarmStandbyTimeout2Seconds="15"
    BreadcrumbMaxLocsToStore="280"
    PsfUseGnssKf="true"
  >
  </gll>
  <gll_features
	EnableLowPowerPmm="true"
	EnableOnChipMiCtrl="true"
	EnableInternalBlanking="true"
  />

<job Id="Periodic">
    <task>
        <req_pos/>
    </task>
</job>

<job Id="FactoryTestHostWake">
        <task Id="-" Repeat="1" >
            <req_ftest Prn="1" FactoryTestItems="GL_FACT_TEST_HOSTWAKE" FactoryTestMode="GL_FACT_TEST_CONT" DurationSec="20" />
        </task>
</job>

<!-- Periodic Position with the ROM almanac ignored for simulator testing -->
<job id="Simulator_Periodic">
    <task id="cont" repeat="1">
      <startup ignore_rom_alm="true" />
      <req_pos validfix="2000" duration_sec="1500"/>
    </task>
</job>

<!-- Repetetive cold starts -->
<job id="Cold_Starts">
    <task repeat="100">
           <startup
                     ignore_osc="false"
                     ignore_rom_alm="false"
                     ignore_ram_alm="false"
                     ignore_pos="true"
                     ignore_nav="true"
                     ignore_time="true"
           />
      <req_pos validfix="1"/>
    </task>
</job>

<!-- This job starts signle chanel factory test mode
       The signal is expected to be in the range from -125 dBm to -145 dBm
       with the frequency offset range from -2 ppm to +2 ppm
       for this mode to provide reliable results
-->
<job id="Factory_High_SNR">
    <task id="test" repeat="1">
        <startup
            ignore_osc="true"
            ignore_rom_alm="true"
            ignore_ram_alm="true"
            ignore_pos="true"
            ignore_nav="true"
            ignore_time="true"
        />
        <req_ftest
            PRN="1"
            GL_FACT_TEST_MODE="GL_FACT_TEST_CONT"
            GL_FACT_TEST_ITEMS="GL_FACT_TEST_CW"
            avg_int_sec="10"
            duration_sec="60"
        />
    </task>
</job>

<job id="Factory_Combo_CW_Test">
    <task id="test" repeat="1">
        <startup
            ignore_osc="true"
            ignore_rom_alm="true"
            ignore_ram_alm="true"
            ignore_pos="true"
            ignore_nav="true"
            ignore_time="true"
        />
        <req_ftest
            PRN="1"
            GL_FACT_TEST_MODE="GL_FACT_TEST_CONT"
            GL_FACT_TEST_ITEMS="GL_FACT_TEST_CW"
            avg_int_sec="10"
            duration_sec="60"
        />
    </task>
</job>

<job Id="batching">
    <task>
        <req_breadcrumb BreadCrumbPeriodS="10" BreadCrumbWakeUpOnFifoFull="true" BreadCrumbReportAllFixes="true" />
    </task>
</job>

</glgps>

